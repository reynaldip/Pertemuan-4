#include <iostream>
using namespace std;
int main() //Hitung Waktu
{
    int jmldetik;
    int Jam;
    int Menit;
    int Detik;
    int Sisa;

    cout<<"Masukkan Waktu : "<<endl;
    cin >> jmldetik;

  Jam = jmldetik / 3600;
  Sisa = jmldetik % 3600;
  Menit = Sisa / 60;
  Detik = Sisa % 60;
  
  Detik = Detik + 1;

    cout<<Jam<<"jam"<<endl;
    cout<<Menit<<" menit"<<endl;
    cout<<Detik<<" detik"<<endl;


return 0;
}
